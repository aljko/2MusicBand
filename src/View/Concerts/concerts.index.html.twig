{% extends 'layout.html.twig' %}
{% block title %}
    <title>Concerts</title>
{% endblock %}
{% block content %}
    </br>
    <div class="container">
        {% for concert in concerts %}
            {% if concert.ID != 99 %}
                    <div class="card mb-1" style="max-width: 1100px;">
                        <div class="row no-gutters">
                            <div class="col-md-3">
                                <img src="/assets/photos/site/{{concert.photo}}" class="card-img" alt="...">
                            </div>
                            <div class="col-md-3">
                                <div class="card-body">
                                    <h5 class="card-title">{{ concert.title }}</h5>
                                    <p class="card-text">{{ concert.addresse }} {{ concert.zipcode }} {{ concert.ville }} </p>
                                    <p class="card-text"><small class="text-muted">le {{ concert.date_concert | date('d.m.Y') }}</small></p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <img src="/assets/photos/plan/{{ concert.carte }}" class="card-img" alt="...">
                            </div>
                        </div>
                    </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}





