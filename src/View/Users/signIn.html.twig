{% extends "layout.html.twig" %}

{% block title %}
	<title>SignIn</title>
{% endblock %}


{% block navbar %}
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" href="/">Home</a>

		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				{% for menu in menus %}
					<li class="nav-item">
						<a class="nav-link" href="../{{ menu.path_url }}" tabindex="-1" aria-disabled="true">{{ menu.name }}</a>
					{% endfor %}
				</ul>
			</div>
		</nav>
	{% endblock %}

	{% block content %}
      <div class="col-12 top80"
			<p class="warningtext">{{sessions.signin}}</p>
      </div>
			<form action="checkSignIn" method="Post">
				<div class="form-group">
					<label for="pseudo">
						<p class="formtext">{{sessions.pseudo}}</p>
					</label>
					<input type="pseudo" class="form-control" name="pseudo" id="pseudo" placeholder="">
				</div>
				<div class="form-group">
					<label for="password">
						<p class="formtext">{{sessions.password}}</p>
					</label>
					<input type="password" class="form-control" name="password" id="password" placeholder="">
				</div>
        <div class="form-group">
				<button type="submit" class="btn-sign">SignIn</button>
        </div>
      </form>

	{% endblock %}
